doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport" content="width=device-width, user-scalable=yes, initial-scale=1.0, maximum-scale=2.0, minimum-scale=1.0")
        title Document
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&family=Roboto+Slab:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
        link(rel="stylesheet", href="css/styles.css")
        
    body
        include components/mixins
        .hidden.hidden-contacts
            .svg-container 
                .my-svg
            header.fixed-header.container
                .fixed-navigation
                    +headerLogo('img/logo.svg', 'ua', 'index.html', 'logo', '097 302 1025')  
            div#menu-slide.slide-default
                span.elipse-box.elipse1
                span.elipse-box.elipse2
                span.elipse-box.elipse3
                span.elipse-box.elipse4
                span.elipse-box.elipse5
                main.wrapper.contacts-wrap
                    h1.title Контакти
                    .main-contacts.d-flex.flex-wrap
                        .container-contacts 
                            h3.title-h3 телефон
                            p 
                                a(href="tel:+380971647256") +38 (097) 164-72-56
                        .container-contacts 
                            h3.title-h3 адреса
                            p вулиця Молодіжна 2/3А
                        .container-contacts 
                            h3.title-h3 електронна пошта
                            p 
                                a(href="mailto: admin@hashtag.net.ua") admin@hashtag.net.ua
                    .title-absolute-container
                        h2.title.title-absolute Давайте обговоримо 
                        //- ваш проект
                    .contacts-form
                        form(action="", method="post") 
                            .d-flex.flex-between.flex-wrap.input-column-gap
                                label.for-small-input 
                                    h3.title-h3 Ваше ім’я*
                                    input.input-outline(type="text") 
                                label.for-small-input 
                                    h3.title-h3 Телефон*
                                    input.input-outline(type="tel") 
                                label.for-small-input 
                                    h3.title-h3 назва вашої компанії
                                    input.input-outline(type="text") 
                                label.for-small-input 
                                    h3.title-h3 E-mail
                                    input.input-outline(type="email") 
                            label.for-large-input  
                                h3.title-h3 повідомлення
                                textarea.contact-message-area.input-outline(name="message", cols="30", rows="10")
                            label.for-large-input  
                                h3.title-h3 ПРИКРІПИТИ ФАЙЛ
                                .d-flex.file-add
                                    .allow-file-types-container.input-outline
                                        p jpg, png, pdf, svg, doc, exe
                                    input(type="file"  accept=".jpg,.png,.pdf,.svg,.doc,.exe") 
                            .submit
                                a(href="contacts.html") відправити

            .menuButton#menuBtn
                .menuText
                    <svg xmlns="http://www.w3.org/2000/svg">
                        <!-- Коло -->
                        <circle fill="rgba(36, 215, 255, 1)" cx="67" cy="67" r="50" />

                        <!-- Текст, який обтікає коло -->
                        <text cx="0" cy="0">
                            <textPath class="path" xlink:href="#circlePath" startOffset="250">
                                <tspan  x="0" y="0" rotate="180" font-family="Montserrat" font-weight="500" font-size="17" fill="rgba(255, 252, 252, 1)">юнеМ</tspan>
                            </textPath>
                        </text>

                        <!-- Дефініція шляху для кола -->
                        <defs>
                            <path id="circlePath" d="M 100 100 m -50, 0 a 50,50 0 1,0 100,0 a 50,50 0 1,0 -100,0" />
                        </defs>
                    </svg>
            div.menuOpen#menuOpen
                .cardsOverflow.d-flex.wrapper.flex-between
                    +cardsMenuInfo(cardsMenuInfo.general)
                    +cardsMenuInfo(cardsMenuInfo.aboutUs)
                    +cardsMenuInfo(cardsMenuInfo.portfolio)
                    +cardsMenuInfo(cardsMenuInfo.contacts)

        script(src="js/scripts.js") 